# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
PORT=8000
HOST=localhost

# Database Configuration (if needed)
DATABASE_URL=postgresql://user:password@localhost:5432/animatix

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json  # or text
LOG_FILE=logs/animatix.log

# Model Configuration
SPACY_MODEL=en_core_web_trf
DEFAULT_LLM_MODEL=gpt-4
FALLBACK_LLM_MODEL=gpt-3.5-turbo

# Performance Settings
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30

# Feature Flags
ENABLE_LLM_ENHANCEMENT=true
ENABLE_AUTOCOMPLETION=true
ENABLE_SCENE_IMPROVEMENTS=true

# Monitor Configuration
MONITOR_HISTORY_LIMIT=1000
MONITOR_MAX_CONNECTIONS=100
MONITOR_RATE_LIMIT_WINDOW=60  # seconds
MONITOR_RATE_LIMIT_MAX_ATTEMPTS=5
MONITOR_METRICS_UPDATE_INTERVAL=1000  # milliseconds
MONITOR_WEBSOCKET_PING_INTERVAL=30000  # milliseconds
